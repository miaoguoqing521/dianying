<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    >

    <RelativeLayout
        android:background="#1D254E"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10">
    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:id="@+id/recommed_img"/>


    <TextView
        android:layout_width="@dimen/dp_182"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/recommed_img"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#fff"
        android:id="@+id/recommed_tv"/>
        <TextView
            android:layout_width="@dimen/dp_192"
            android:layout_height="@dimen/dp_17"
            android:textColor="#fff"
            android:layout_toRightOf="@id/recommed_img"
            android:layout_below="@id/recommed_tv"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/recommed_tvv"/>
    </RelativeLayout>
</RelativeLayout>