<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:background="#0F1D3C"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#141931">
        <!--定位图片-->
        <ImageView
            android:id="@+id/imagedw"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_38"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/textdw"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_40"
            android:text="北京"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
        <!--放大镜图片-->
        <ImageView
            android:id="@+id/search"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_marginRight="@dimen/dp_27"
            android:src="@drawable/search" />
        <!--轮播图-->

        <!--<com.stx.xhb.xbanner.XBanner-->
            <!--android:layout_width="@dimen/dp_280"-->
            <!--android:layout_height="@dimen/dp_150"-->
            <!--android:layout_marginLeft="@dimen/dp_15"-->
            <!--android:layout_marginTop="@dimen/dp_80"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:id="@+id/ban"></com.stx.xhb.xbanner.XBanner>-->
        <com.xuezj.cardbanner.CardBanner
            android:id="@+id/ban"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_165"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_10">
        </com.xuezj.cardbanner.CardBanner>
        <TextView
            android:id="@+id/film_bannershu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ban"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"/>
        <!--正在热映横条 just-->
        <RelativeLayout
            android:id="@+id/hit_layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:background="#1c2243"
            android:layout_below="@+id/ban"
            android:layout_marginTop="@dimen/dp_25">
            <ImageView
                android:id="@+id/i1"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@drawable/hot_showing"/>
            <TextView
                android:id="@+id/t1"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_20"
                android:layout_toRightOf="@+id/i1"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="正在热映" />
            <TextView
                android:id="@+id/Heat_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:text="更多"
                android:gravity="center_horizontal"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hit_layout1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginBottom="20dp">
        </android.support.v7.widget.RecyclerView>
        <!--即将上映横条 coming-->
        <RelativeLayout
            android:id="@+id/coming_layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="#1c2243"
            android:layout_below="@+id/recy1"
            android:layout_marginTop="@dimen/dp_15">
            <ImageView
                android:id="@+id/i2"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@drawable/hot_showing"/>
            <TextView
                android:id="@+id/t2"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_20"
                android:layout_toRightOf="@+id/i2"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="即将上映" />
            <TextView
                android:id="@+id/be_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:text="更多"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/coming_layout1">
        </android.support.v7.widget.RecyclerView>
        <!--热门电影横条 hot-->
        <RelativeLayout
            android:id="@+id/hot_layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="#1c2243"
            android:layout_below="@+id/recy2"
            android:layout_marginTop="@dimen/dp_20">
            <ImageView
                android:id="@+id/i3"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@drawable/hot_showing"/>
            <TextView
                android:id="@+id/t3"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_20"
                android:layout_toRightOf="@+id/i3"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="热门电影" />
            <TextView
                android:id="@+id/hot_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:text="更多"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/hot_bjt"
            android:layout_width="@dimen/dp_312"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_height="@dimen/dp_120"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/hot_showing"
            android:layout_below="@+id/hot_layout1"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_below="@id/hot_bjt">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</ScrollView>