<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"></FrameLayout>

    <RadioGroup
        android:id="@+id/group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#0F1D3C"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv1"
                android:paddingLeft="@dimen/dp_50"
                android:textSize="@dimen/sp_14"
                android:textColor="#e8185e"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/diandian"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_52"/>
            <RadioButton
                android:id="@+id/radiobtn1"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:checked="true"
                android:background="@drawable/movie"
                android:button="@null"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv2"
                android:paddingLeft="@dimen/dp_50"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="#e8185e"
                android:layout_marginLeft="@dimen/dp_124"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/yingdian"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_52"/>
            <RadioButton
                android:id="@+id/radiobtn2"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_170"
                android:background="@drawable/cinema"
                android:button="@null"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv3"
                android:paddingLeft="@dimen/dp_50"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="#e8185e"
                android:layout_marginLeft="@dimen/dp_236"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/wodian"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_52"/>
            <RadioButton
                android:paddingTop="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_20"
                android:id="@+id/radiobtn3"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_295"
                android:background="@drawable/my"
                android:button="@null"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </RelativeLayout>
    </RadioGroup>
</LinearLayout>