<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="@dimen/dp_323"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#1D254E">

    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_90"
        android:layout_centerVertical="true"
        android:id="@+id/near_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/near_img"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#fff"
            android:id="@+id/near_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/near_tv"
            android:layout_toRightOf="@id/near_img"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#fff"
            android:id="@+id/near_tvv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/near_tvv"
            android:textColor="#fff"
            android:id="@+id/near_tvvv"/>
    </RelativeLayout>
</RelativeLayout>