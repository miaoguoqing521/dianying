<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".view.cinema.CinemaDetails">
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@drawable/backk"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_24"
        android:id="@+id/details_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="影院详情"
            android:textColor="#fff"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/invalid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:text="保利国际影院"
                android:textColor="#fff"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18.8dp"
                android:layout_marginLeft="316dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/xinxin" />

            <TextView
                android:id="@+id/yyxq_recy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="60dp"
                android:textColor="#d3af56"
                android:textSize="14sp" />


            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="265dp"
                android:layout_marginTop="63dp"
                android:text="ㅙ"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="287dp"
                android:layout_marginTop="62dp"
                android:text="到这里去"
                android:textColor="#fff"
                android:textSize="12sp" />

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:layout_marginTop="@dimen/dp_161"
                android:background="#1c2243"
                app:tabTextColor="#fff"
                android:id="@+id/yyxq_tab" ></android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_199"
                android:id="@+id/yyxq_page"></android.support.v4.view.ViewPager>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:background="#e8185e"
        android:text="查看该影院电影排期"
        android:textColor="#fff"
        android:textSize="14sp"
        android:id="@+id/Schedulingbtn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</RelativeLayout>