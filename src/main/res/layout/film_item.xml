<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#141931"
    android:paddingBottom="@dimen/dp_42"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/film_img"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_45" />

    <TextView
        android:id="@+id/film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_toRightOf="@id/film_img"
        android:text="123132"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/filmReview_ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_name"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_10"
        android:numStars="5"
        android:progressBackgroundTint="#fff"
        android:progressTint="#e8185e" />

    <TextView
        android:id="@+id/film_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/filmReview_ratingBar"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/film_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_27"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/film_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_img"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/film_num"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_below="@id/film_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/dianzan" />

    <TextView
        android:id="@+id/film_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/film_num"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/film_replyNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_content"
        android:layout_marginLeft="@dimen/dp_246"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/film_num_text"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />
</RelativeLayout>