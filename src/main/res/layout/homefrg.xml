<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="#0F1D3C"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_gravity="center_vertical"
            android:src="@drawable/location"/>
        <TextView
            android:id="@+id/textdw"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:text="北京"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
        <EditText
            android:id="@+id/seach_cinema"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:background="@drawable/searcht"
            android:hint="请输入要查询的电影" />
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:tabTextColor="#fff"
        android:id="@+id/tab"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/moview_view"></android.support.v4.view.ViewPager>
</LinearLayout>