<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#141931"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ppp"
            android:layout_marginLeft="@dimen/dp_160"
            android:layout_marginTop="@dimen/dp_30"
            android:text="我的"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"/>
        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_17"
            android:id="@+id/my_email"
            android:layout_marginLeft="@dimen/dp_110"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_toRightOf="@+id/ppp"
            android:src="@drawable/xinxi"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="28dp"
        android:background="#fff">

        <ImageView
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_22"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/my_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_toRightOf="@id/my_img"
            android:text="电影故事"
            android:textColor="#141931"
            android:textSize="16sp"
            android:id="@+id/my_name"/>

        <ImageView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_140"
            android:layout_marginTop="@dimen/dp_39"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_39"
            android:layout_toRightOf="@id/my_name"
            android:src="@drawable/back"
            android:id="@+id/my_back"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_28"
        android:background="#1c2243">

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/wodedianyingpiao"
            android:id="@+id/iii"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@id/iii"
            android:text="电影票"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:id="@+id/my_ticket"/>
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@id/my_ticket"
            android:id="@+id/my_ticket_img"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_355"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_28"
        android:background="#1c2243">

        <ImageView
            android:id="@+id/my_pay"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/focus" />

        <TextView
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_pay"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="我的关注"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/my_notice"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/my_pay"
            android:src="@drawable/group_4" />

        <TextView
            android:id="@+id/bbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_notice"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_toRightOf="@id/aaa"
            android:text="我的预约"
            android:textColor="#fff" />


        <ImageView
            android:id="@+id/my_buy"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/my_notice"
            android:src="@drawable/move_time" />

        <TextView
            android:id="@+id/ccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_notice"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_toRightOf="@id/bbb"
            android:text="购买记录"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/my_seen"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/aaa"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:src="@drawable/kanguodedianying" />

        <TextView
            android:id="@+id/ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_seen"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="看的电影"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/my_review"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/bbb"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_toRightOf="@id/my_seen"
            android:src="@drawable/pinglun" />

        <TextView
            android:id="@+id/eee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_seen"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_toRightOf="@id/ddd"
            android:text="我的评论"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/my_idea"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/ccc"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/my_review"
            android:src="@drawable/yijian" />

        <TextView
            android:id="@+id/fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_idea"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_toRightOf="@id/eee"
            android:text="意见反馈"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/my_set"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/ddd"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:src="@drawable/shezhi" />

        <TextView
            android:id="@+id/ggg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_set"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="我的设置"
            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>